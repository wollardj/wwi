@import 'globalVars.import.styl'

html
	background-image url('postcard.jpg')
	background-size cover

body
	background-color rgba(255,255,250, 0.9)
	position relative
	padding-top 75px
	margin 0 0 15px 0
	box-shadow 0 5px 10px #444



.panel
	border-color rgb(208, 208, 208)
	border-radius 5px
	box-shadow 0 2px 6px #919293

	.panel-heading
		h1, h2, h3, h4, h5, h6
			margin 0


.panel-default
	.panel-heading
		background linear-gradient(to bottom, #fefefe 0%, #f6f6f6 50%, #ededed 51%, #e4e4e4 100%)


.panel-primary
	.panel-heading
		background linear-gradient(to bottom, rgba(30, 87, 153, 1) 0%, rgba(41, 137, 216, 1) 50%, rgba(32, 124, 202, 1) 51%, rgba(125, 185, 232, 1) 100%)



// Typeahead classes
.tt-dropdown-menu
	background-color rgba(255, 255, 255, 0.9)
	padding 5px
	border-radius 5px
	box-shadow 0 5px 10px rgba(0, 0, 0, 0.7)
	min-width 170px


.tt-suggestion
	margin 0
	padding 0

.tt-suggestion p
	font-size 12pt
	margin 0
	padding 5px


.tt-cursor
	background-color blue
	color white
